@page "/manage-question"

    <h1>Manage Question</h1>

<button class="btn btn-primary my-md-4">Add Question</button>
<div class="card mb-4">
    <div class="card-body">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label>Score</label>
            <input class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label>Answers</label>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Answers no.1</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck2">
                <label class="custom-control-label" for="customCheck2">Answers no.2</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck3">
                <label class="custom-control-label" for="customCheck3">Answers no.3</label>
            </div>
        </div>

    </div>
</div>
